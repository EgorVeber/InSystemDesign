<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ColorContentBackground">

        <View
            style="@style/SkeletonRectangleSmallPrimary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonRectangleMediumPrimary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonCirclePrimary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ColorBackgroundLightNight">

        <View
            style="@style/SkeletonRectangleSmallSecondary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonRectangleMediumSecondary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonCirclePrimarySecondary"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ColorBackgroundLightNight">

        <View
            style="@style/SkeletonRectangleSmallGames"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonRectangleMediumGames"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />

        <View
            style="@style/SkeletonCirclePrimaryGames"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="25dp" />
    </LinearLayout>
</LinearLayout>